# Alias for updating system
alias update='sudo pacman -Syu'

# Alias for searching packages in repositories
alias s='pacman -Ss'

# Alias for installing packages
alias install='sudo pacman -S'

# Alias for removing packages
alias del='sudo pacman -R'

# Alias for searching files/directories
alias find='find . -type f -iname'

# Alias for listing running processes
alias psr='ps aux'

# Alias for listing disk usage
alias diskusage='df -h'

# Alias for listing directory sizes
alias dirsize='du -h --max-depth=1'

# Alias for showing system information
alias sysinfo='uname -a'

# Alias for pinging a website to check connectivity
# alias pingtest='ping -c 5'

# Alias for restarting network services
alias restartnetwork='sudo systemctl restart network.service'

# Alias for listing processes by CPU usage
alias topcpu='ps aux --sort=-%cpu | head -n 11'

# Alias for listing processes by memory usage
alias topmem='ps aux --sort=-%mem | head -n 11'

# Alias for starting, stopping, and restarting systemd services
alias startservice='sudo systemctl start'
alias stopservice='sudo systemctl stop'
alias restartservice='sudo systemctl restart'

# Alias for listing open ports
alias openports='sudo netstat -tuln'
